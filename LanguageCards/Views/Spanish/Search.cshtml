@using LanguageCards.Models.DbModels
@{
    ViewData["Title"] = "Búsqueda";
}


<link href="~/css/russian.css" rel="stylesheet" />

@model WordListViewModel

<div class="page-container">
    <form method="post">
        <a class="back_container nostyle" href="~/spanish">
            <img src="~/svgs/arrow-left-square-fill.svg" width="35" height="35" class="backbtn" />
            <span class="backtxt">Espalda</span>
        </a>
        <h1 class="title">Buscar palabras en español</h1>
        <input id="word" type="text" class="word-input" name="WordToFind" placeholder="Poner en la palabra de búsqueda..." />
    </form>


    <div class="modal-container" id="modal_container">
        <form method="post" name="edit"
              class="modal">
            <div class="modal-card">
                <img src="~/svgs/x.svg" width="35" height="35" id="exit"/>
                <h1 class="title">Edit</h1>
                <input type="text" class="edit-input" name="userName" value="" id="rus" placeholder="Spanish" />
                <input type="text" class="edit-input" name="Password" value="" id="eng" placeholder="English" />
                <button class="loginbtn" id="lgnbtn">
                    <span>SUBMIT</span>
                </button>
            </div>
        </form>
    </div>

    <table class="tbl">
        <thead>
            <tr>
                <td>Español</td>
                <td>Inglés</td>
                <td> </td>
            </tr>
        </thead>
        @if (Model.WordList.Count() == 0)
        {
            <tr>
                <td>No hay palabras</td>
            </tr>
        }
       else foreach (QuestionModel pair in Model.Words)
            {
                <tr>
                    <td class="russian_word">@pair.Word</td>
                    <td class="english_word">@pair.Translation</td>
                    <td class="back_container open" style="display: flex; justify-content: center">
                            <img src="~/svgs/gear-fill.svg" class="gear-icon" /><span>Edit</span>
                    </td>
                </tr>
            }
    </table>

</div>

<script src="~/js/edit.js"></script>
